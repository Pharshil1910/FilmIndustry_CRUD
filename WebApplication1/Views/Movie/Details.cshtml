@model WebApplication1.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Data.Name
        </dd>
        <dt class = "col-sm-2">
            Plot
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Data.Plot
        </dd>
        <dt class = "col-sm-2">
           Poster
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Data.Poster
        </dd>
        <dt class = "col-sm-2">
            Producer
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Data.ProducerName
        </dd>
        <dt class="col-sm-2">
            Actors
        </dt>
        <dd class="col-sm-10">
            @{
                foreach (var item in ViewBag.Data.ActorNames){
                    <ul>
                    <li>@item</li>
                    </ul>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@ViewBag.Data?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
